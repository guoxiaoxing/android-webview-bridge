<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.guoxiaoxing.volley">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.guoxiaoxing.VolleyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.guoxiaoxing.image.ImageRequestActivity">
        </activity>
        <activity android:name="com.guoxiaoxing.json.JsonRequestActivity">
        </activity>
        <activity android:name="com.guoxiaoxing.string.StringRequestActivity">
        </activity>
    </application>

</manifest>